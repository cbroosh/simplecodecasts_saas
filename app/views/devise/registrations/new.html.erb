<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
      <% if params[:plan] == '2' %>
      <h1 class='text-center'>Pro Account</h1>
      <p class='text-center'>Sign up for only $10/month to get full acceess to all of Dev Match's features!</p>
    <% else %>
      <h1 class='text-center'>Basic Account</h1>
      <p class='text-center'>Sign up for a basic account and see who else is on Dev Match.</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>