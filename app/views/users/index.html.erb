<div class='row'>
    <div class='col-md-8 col-md-offset-2'>
        <ul class="list-unstyled">
            <% @users.each do |u| %>
                <% if u.profile %>
                    <li class="well row <%= cycle('white-bg', '') %>">
                        <div class="col-md-4 text-center">
                            <% if u.profile.avatar %>
                                <%= link_to u do %>
                                    <%= image_tag u.profile.avatar.url(:thumb) %><br/>
                                <% end %>
                            <% end %>
                        </div>
                        <div class="col-md-8 text-center">
                            <%= link_to u do %>
                                <h1><%= u.profile.first_name %> <%= u.profile.last_name %></h1>
                            <% end %>
                            <p><%= u.profile.job_title %></p>
                        </div>
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>