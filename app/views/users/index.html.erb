<div class='row'>
    <div class='col-md-8 col-md-offset-2'>
        <h1 class="text-center">Dev Match Community</h1>
        <p>Welcome to the community! Users must fill out a profile before they will be able to see the community.</p>
        <ul class="list-unstyled">
            <% @users.each do |u| %>
                <% if u.profile %>
                    <li class="well row <%= cycle('white-bg', '') %>">
                        <div class="col-md-4 text-center">
                            <% if u.profile.avatar %>
                                <%= link_to u do %>
                                    <%= image_tag u.profile.avatar.url(:thumb) %><br/>
                                <% end %>
                            <% end %>
                        </div>
                        <div class="col-md-8 text-center">
                            <%= link_to u do %>
                                <h1><%= u.profile.first_name %> <%= u.profile.last_name %></h1>
                            <% end %>
                            <p><%= u.profile.job_title %>
                            <% if u.plan_id == 2 %>
                                <span class="label label-danger">PRO</span>
                            <% end %>
                            </p>
                        </div>
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>